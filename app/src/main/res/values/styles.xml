<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultColorPickerStyle">
        <item name="color_picker_background_x">@color/color4</item>
        <item name="color_picker_background_y">@color/color5</item>
    </style>
    <style name="ColorPickerStyle1">
        <item name="color_picker_background_x">@color/color1</item>
        <item name="color_picker_background_y">@color/color2</item>
    </style>
    <style name="ColorPickerStyle2">
        <item name="color_picker_background_x">@color/color2</item>
        <item name="color_picker_background_y">@color/color3</item>
    </style>
    <style name="ColorPickerStyle3">
        <item name="color_picker_background_x">@color/color3</item>
        <item name="color_picker_background_y">@color/color4</item>
    </style>
    <style name="ColorPickerStyle4">
        <item name="color_picker_background_x">@color/color4</item>
        <item name="color_picker_background_y">@color/color5</item>
    </style>
    <style name="ColorPickerStyle5">
        <item name="color_picker_background_x">@color/color5</item>
        <item name="color_picker_background_y">@color/color1</item>
    </style>
</resources>
